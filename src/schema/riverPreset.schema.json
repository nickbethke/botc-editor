{
	"$schema": "http://json-schema.org/draft-07/schema",
	"additionalProperties": false,
	"$id": "River Preset Schema",
	"type": "object",
	"properties": {
		"name": {
			"type": "string"
		},
		"width": {
			"type": "number",
			"minimum": 1,
			"maximum": 20
		},
		"height": {
			"type": "number",
			"minimum": 1,
			"maximum": 20
		},
		"data": {
			"type": "array",
			"items": {
				"type": "object",
				"additionalProperties": false,
				"properties": {
					"position": {
						"type": "array",
						"items": {
							"type": "number"
						},
						"minItems": 2,
						"maxItems": 2
					},
					"direction": {
						"type": "string",
						"enum": [
							"NORTH",
							"SOUTH",
							"EAST",
							"WEST"
						]
					}
				},
				"required": [
					"position",
					"direction"
				]
			}
		}
	},
	"required": [
		"data",
		"name",
		"width",
		"height"
	]
}
