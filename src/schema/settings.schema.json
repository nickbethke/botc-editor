{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "Settings Schema",
	"type": "object",
	"additionalProperties": true,
	"properties": {
		"darkMode": {
			"type": "boolean",
			"default": true
		},
		"language": {
			"type": "string",
			"enum": [
				"de",
				"en"
			],
			"default": "en"
		},
		"popupsDraggable": {
			"type": "boolean",
			"default": false
		}
	},
	"required": [
		"darkMode",
		"language",
		"popupsDraggable"
	]
}
