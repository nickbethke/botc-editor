{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "Board configuration schema",
	"type": "object",
	"required": [
		"name",
		"height",
		"width",
		"startFields",
		"checkPoints",
		"eye",
		"holes",
		"riverFields",
		"walls",
		"lembasFields"
	],
	"properties": {
		"name": {
			"type": "string",
			"minLength": 1,
			"default": "The Centerl√§nd"
		},
		"height": {
			"type": "integer",
			"minimum": 2,
			"default": 2,
			"description": "The height of the board"
		},
		"width": {
			"type": "integer",
			"minimum": 2,
			"default": 2,
			"description": "The width of the board"
		},
		"startFields": {
			"type": "array",
			"minItems": 2,
			"items": {
				"type": "object",
				"required": [
					"position",
					"direction"
				],
				"properties": {
					"position": {
						"type": "array",
						"minItems": 2,
						"maxItems": 2,
						"items": {
							"type": "integer"
						}
					},
					"direction": {
						"type": "string",
						"enum": [
							"NORTH",
							"SOUTH",
							"WEST",
							"EAST"
						]
					}
				}
			}
		},
		"checkPoints": {
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "array",
				"minItems": 2,
				"maxItems": 2,
				"items": {
					"type": "integer"
				}
			}
		},
		"eye": {
			"type": "object",
			"required": [
				"position",
				"direction"
			],
			"properties": {
				"position": {
					"type": "array",
					"minItems": 2,
					"maxItems": 2,
					"items": {
						"type": "integer"
					}
				},
				"direction": {
					"type": "string",
					"enum": [
						"NORTH",
						"SOUTH",
						"WEST",
						"EAST"
					]
				}
			}
		},
		"holes": {
			"type": "array",
			"items": {
				"type": "array",
				"minItems": 2,
				"maxItems": 2,
				"items": {
					"type": "integer"
				}
			}
		},
		"riverFields": {
			"type": "array",
			"items": {
				"type": "object",
				"required": [
					"position",
					"direction"
				],
				"properties": {
					"position": {
						"type": "array",
						"minItems": 2,
						"maxItems": 2,
						"items": {
							"type": "integer"
						}
					},
					"direction": {
						"type": "string",
						"enum": [
							"NORTH",
							"SOUTH",
							"WEST",
							"EAST"
						]
					}
				}
			}
		},
		"walls": {
			"type": "array",
			"items": {
				"type": "array",
				"minItems": 1,
				"items": {
					"type": "array",
					"minItems": 2,
					"maxItems": 2,
					"items": {
						"type": "integer"
					}
				}
			}
		},
		"lembasFields": {
			"type": "array",
			"items": {
				"type": "object",
				"required": [
					"position",
					"amount"
				],
				"properties": {
					"position": {
						"type": "array",
						"minItems": 2,
						"maxItems": 2,
						"items": {
							"type": "integer"
						}
					},
					"amount": {
						"type": "integer"
					}
				}
			}
		}
	}
}
