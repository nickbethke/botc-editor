{
	"description": "Editor for the Battle of the Centerländ game",
	"keywords": [
		"battle of the centerländ",
		"editor"
	],
	"license": "UNLICENSED",
	"author": {
		"name": "Team 11 - Sopra WiSe22/23 SoSe23",
		"email": "info@uni-ulm.de"
	},
	"contributors": [
		{
			"name": "Nick Bethke",
			"email": "nick.bethke@uni-ulm.de"
		}
	],
	"homepage": "https://uni-ulm.de",
	"main": "./src/main/main.ts",
	"scripts": {
		"build": "concurrently \"npm run build:main\" \"npm run build:renderer\"",
		"build:main": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.main.prod.ts",
		"build:renderer": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.renderer.prod.ts",
		"postinstall": "ts-node .erb/scripts/check-native-dep.js && electron-builder install-app-deps && cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.renderer.dev.dll.ts",
		"lint": "cross-env NODE_ENV=development eslint . --ext .js,.ts,.tsx",
		"package": "ts-node ./.erb/scripts/clean.js dist && npm run build && electron-builder build --publish never",
		"prepare": "husky install",
		"rebuild": "electron-rebuild --parallel --types prod,dev,optional --module-dir release/app",
		"start": "ts-node ./.erb/scripts/check-port-in-use.js && npm run start:renderer",
		"start:main": "cross-env NODE_ENV=development electronmon -r ts-node/register/transpile-only .",
		"start:preload": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.preload.dev.ts",
		"start:renderer": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack serve --config ./.erb/configs/webpack.config.renderer.dev.ts",
		"test": "concurrently \"npm run build\" && \"jest\""
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"cross-env NODE_ENV=development eslint --cache"
		],
		"*.json,.{eslintrc,prettierrc}": [
			"prettier --ignore-path .eslintignore --parser json --write"
		],
		"*.{css,scss}": [
			"prettier --ignore-path .eslintignore --single-quote --write"
		],
		"*.{html,md,yml}": [
			"prettier --ignore-path .eslintignore --single-quote --write"
		]
	},
	"browserslist": [],
	"prettier": {
		"printWidth": 120,
		"singleQuote": true,
		"semi": true,
		"tabWidth": 2,
		"trailingComma": "es5",
		"overrides": [
			{
				"files": [
					".prettierrc",
					".eslintrc"
				],
				"options": {
					"parser": "json"
				}
			}
		]
	},
	"jest": {
		"moduleDirectories": [
			"node_modules",
			"release/app/node_modules",
			"src"
		],
		"moduleFileExtensions": [
			"js",
			"jsx",
			"ts",
			"tsx",
			"json"
		],
		"moduleNameMapper": {
			"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/.erb/mocks/fileMock.js",
			"\\.(css|less|sass|scss)$": "identity-obj-proxy"
		},
		"setupFiles": [
			"./.erb/scripts/check-build-exists.ts"
		],
		"testEnvironment": "jsdom",
		"testEnvironmentOptions": {
			"url": "http://localhost/"
		},
		"testPathIgnorePatterns": [
			"release/app/dist"
		],
		"transform": {
			"\\.(ts|tsx|js|jsx)$": "ts-jest"
		}
	},
	"dependencies": {
		"@monaco-editor/react": "^4.4.6",
		"ace-builds": "^1.15.0",
		"array-move": "^4.0.0",
		"astar-typescript": "^1.2.6",
		"dirty-json": "^0.9.2",
		"electron-debug": "^3.2.0",
		"electron-log": "^4.4.8",
		"electron-notarize": "^1.2.2",
		"electron-updater": "^5.2.3",
		"html2canvas": "^1.4.1",
		"monaco-editor": "^0.34.1",
		"mousetrap": "^1.6.5",
		"path-browserify": "^1.0.1",
		"postcss": "^8.4.21",
		"react": "^18.2.0",
		"react-ace": "^10.1.0",
		"react-dom": "^18.2.0",
		"react-easy-sort": "^1.5.1",
		"react-icons": "^4.7.1",
		"react-loader-spinner": "^5.3.4",
		"react-monaco-editor": "^0.51.0",
		"react-router-dom": "^6.4.0"
	},
	"devDependencies": {
		"@electron/notarize": "^1.2.3",
		"@electron/rebuild": "^3.2.10",
		"@pmmmwh/react-refresh-webpack-plugin": "^0.5.7",
		"@svgr/webpack": "^6.3.1",
		"@teamsupercell/typings-for-css-modules-loader": "^2.5.1",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.3.0",
		"@types/jest": "^28.1.7",
		"@types/lodash": "^4.14.191",
		"@types/mousetrap": "^1.6.11",
		"@types/node": "18.7.6",
		"@types/react": "^18.0.17",
		"@types/react-dom": "^18.0.6",
		"@types/react-test-renderer": "^18.0.0",
		"@types/terser-webpack-plugin": "^5.0.4",
		"@types/webpack-bundle-analyzer": "^4.4.2",
		"@typescript-eslint/eslint-plugin": "^5.33.1",
		"@typescript-eslint/parser": "^5.33.1",
		"ajv": "^8.12.0",
		"autoprefixer": "^10.4.13",
		"browserslist-config-erb": "^0.0.3",
		"chalk": "^4.1.2",
		"concurrently": "^7.3.0",
		"copy-webpack-plugin": "^11.0.0",
		"core-js": "^3.24.1",
		"cross-env": "^7.0.3",
		"css-loader": "^6.7.1",
		"css-minimizer-webpack-plugin": "^4.0.0",
		"detect-port": "^1.3.0",
		"electron": "^20.0.2",
		"electron-builder": "^23.3.3",
		"electron-devtools-installer": "^3.2.0",
		"electronmon": "^2.0.2",
		"eslint": "^8.37.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-erb": "^4.0.3",
		"eslint-import-resolver-typescript": "^3.4.1",
		"eslint-import-resolver-webpack": "^0.13.2",
		"eslint-plugin-compat": "^4.0.2",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jest": "^26.8.3",
		"eslint-plugin-jsx-a11y": "^6.6.1",
		"eslint-plugin-promise": "^6.0.0",
		"eslint-plugin-react": "^7.30.1",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-tsdoc": "^0.2.17",
		"file-loader": "^6.2.0",
		"html-webpack-plugin": "^5.5.0",
		"husky": "^8.0.1",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^28.1.3",
		"jest-environment-jsdom": "^28.1.3",
		"lint-staged": "^13.0.3",
		"mini-css-extract-plugin": "^2.6.1",
		"monaco-editor-webpack-plugin": "^7.0.1",
		"postcss-loader": "^7.0.2",
		"prettier": "^2.7.1",
		"react-refresh": "^0.14.0",
		"react-test-renderer": "^18.2.0",
		"rimraf": "^3.0.2",
		"sass": "^1.54.4",
		"sass-loader": "^13.0.2",
		"style-loader": "^3.3.1",
		"tailwindcss": "^3.3.1",
		"terser-webpack-plugin": "^5.3.5",
		"ts-jest": "^28.0.8",
		"ts-loader": "^9.3.1",
		"ts-node": "^10.9.1",
		"tsconfig-paths-webpack-plugin": "^4.0.0",
		"typescript": "^4.7.4",
		"url-loader": "^4.1.1",
		"webpack": "^5.76.2",
		"webpack-bundle-analyzer": "^4.5.0",
		"webpack-cli": "^4.10.0",
		"webpack-dev-server": "^4.10.0",
		"webpack-merge": "^5.8.0"
	},
	"build": {
		"productName": "BotC-Editor",
		"appId": "org.botc.BotCEditor",
		"asar": true,
		"asarUnpack": "**\\*.{node,dll}",
		"files": [
			"dist",
			"node_modules",
			"package.json"
		],
		"afterSign": ".erb/scripts/notarize.js",
		"mac": {
			"target": {
				"target": "default",
				"arch": [
					"arm64",
					"x64"
				]
			},
			"type": "distribution",
			"hardenedRuntime": true,
			"entitlements": "assets/entitlements.mac.plist",
			"entitlementsInherit": "assets/entitlements.mac.plist",
			"gatekeeperAssess": false
		},
		"dmg": {
			"contents": [
				{
					"x": 130,
					"y": 220
				},
				{
					"x": 410,
					"y": 220,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"win": {
			"target": [
				"nsis",
				"portable",
				"msi",
				"zip"
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"zip"
			],
			"category": "Utility",
			"maintainer": "Team 11 - Sopra WiSe22/23 SoSe23"
		},
		"directories": {
			"app": "release/app",
			"buildResources": "assets",
			"output": "release/build"
		},
		"extraResources": [
			"./assets/**"
		]
	},
	"devEngines": {
		"node": ">=14.x",
		"npm": ">=7.x"
	},
	"electronmon": {
		"patterns": [
			"!**/**",
			"src/main/**"
		],
		"logLevel": "quiet"
	}
}
